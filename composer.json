{
	"name": "brainsware/bacon-dist",
	"description": "Distribution package for bacon",
	"version": "dev-master",
	"license": "Apache-2.0",
	"minimum-stability": "dev",

	"repositories": [
		{ "type": "composer", "url": "http://local.satis" }
	],

	"require": {
		"brainsware/bacon": "dev-master"
	},

	"scripts": {
		"post-install-cmd": [
			"mkdir -p Config Controllers Models Views/Intro htdocs logs session",
			"cp vendor/brainsware/bacon-dist/skeleton/base_config Config/Base.php",
			"cp vendor/brainsware/bacon-dist/skeleton/application_controller Controllers/Application.php",
			"cp vendor/brainsware/bacon-dist/skeleton/intro_controller Controllers/Intro.php",
			"cp vendor/brainsware/bacon-dist/skeleton/intro_template Views/Intro/index.tpl",
			"cp vendor/brainsware/bacon-dist/skeleton/layout_template Views/layout.tpl"
		]
	}
}
